{
  "name": "sangathan",
  "version": "1.0.0",
  "description": "Sangathan - Multi-tenant web application",
  "private": true,
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --minify",
    "build:js": "cp -r ./resources/js/. ./public/js/",
    "dev": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --watch",
    "watch": "npm run dev"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24"
  }
}